                <p>Grayscale includes full HTML, CSS, and custom JavaScript files along with LESS files for easy customization.</p>
            </div>
        </div>
    </section>


    <section id="login" class="content-section text-center">

        <div class="download-section">

            <div class="container col-md-offset-4">

          <form class="col-md-4" method="post" action="/CommandCenter/">
                <div class="form-group">
                     <input type="text" class="form-control input-lg" placeholder="Username" name="username">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control input-lg" placeholder="Password" name="password">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-lg btn-block" value="Sing In" />
                </div>
        </form>

      </div>

        </div>

    </section>

    
    <!--SignUp Section -->

    <section id="register" class="content-section text-center">

        <div class="download-section">

            <div class="container col-md-offset-4">

          <form class="col-md-4" method="post" action="/Auth/createUser">
                <div class="form-group">
                    <table>
                        <tr>
                            <td>
                                <input type="text" class="form-control input-lg" placeholder="Username" name="username1">
                            </td>
                            
                            <td>
                                <input type="button" class="btn btn-primary btn-lg btn-block" value="Check" id="validityCheck" />
                
                            </td>
                        </tr>
                        <tr>
                            <td><p id="availabilityStatus"></p></td>
                        </tr>
                    </table>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control input-lg" placeholder="Password" name="password">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-lg btn-block" value="Sing In" />
                </div>
        </form>

      </div>

        </div>

    </section>



    <!-- Footer -->
    <footer>
        <div class="container text-center">
            <p>Copyright &copy; GangOfFour</p>
        </div>
    </footer>
    <script type="text/javascript">

        $(document).ready(function () {

            $('#validityCheck').on('click', function () {
                var username = $('#username1').val();

                $.getJSON("/Auth/isValidUsername?UserName=" + username, function (data) {
                    if (data) {
                        $('p#availabilityStatus').text("Username already exits.Try another one").css('color', 'red');
                    }
                    else {
                        $('p#availabilityStatus').text("Good to go").css('color', 'green');
                    }
                });
            });

        });


    </script>

    <script src="../../Contents/CustomScripts/rdc.js"></script>

